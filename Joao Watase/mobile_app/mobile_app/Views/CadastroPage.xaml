<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mobile_app.Views.CadastroPage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" VerticalOptions="Center" HorizontalOptions="Center">
            <Entry x:Name="txtName" Placeholder="Nome" TextColor="white"></Entry>
            <Entry x:Name="txtSurname" Placeholder="Sobrenome" TextColor="white"></Entry>
            <Entry x:Name="txtAge" Keyboard="Numeric" TextColor="white" Placeholder="Age"></Entry>
            <Button x:Name="btnCadastro" Text="Cadastrar" Clicked="btnCadastro_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>